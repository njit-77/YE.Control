<Window x:Class="YE.Control.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YE.Control.Demo"
        xmlns:yecontrol="clr-namespace:YE.Control.UserControls;assembly=YE.Control"
        Title="MainWindow"
        Width="800"
        Height="450"
        mc:Ignorable="d">

    <StackPanel>
        <yecontrol:IP x:Name="IP1"
                      Width="200"
                      Height="30"
                      Margin="5"
                      HasPort="False"
                      BorderBrush="LightGreen"
                      BorderThickness="1" />
        <yecontrol:IP x:Name="IP2"
                      Width="180"
                      Height="30"
                      Margin="5"
                      HasPort="True"
                      IPAddress=""
                      BorderBrush="LightGreen"
                      BorderThickness="1" />
    </StackPanel>
</Window>

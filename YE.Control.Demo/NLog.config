<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" 
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<targets async="true">
		<target name="logfile" xsi:type="File" encoding="utf-8" fileName="${basedir}/log/log${date:yyyyMMdd}.log">
			layout="${longdate} [ThreadID:${threadid}] [${level}] ${message} ${all-event-properties} ${exception:format=tostring}"
		</target>
		<target name="logconsole" xsi:type="Console" encoding="utf-8" autoFlush="True">
			layout="${longdate} [ThreadID:${threadid}] [${level}] ${message} ${all-event-properties} ${exception:format=tostring}"
		</target>
	</targets>

	<rules>
		<logger name="*" minlevel="Trace" writeTo="logfile,logconsole" />
	</rules>
</nlog>
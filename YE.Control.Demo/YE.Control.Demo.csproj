<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
	  <TargetFrameworks>net462;net472;net6.0-windows;net7.0-windows;net8.0-windows;</TargetFrameworks>
    <UseWPF>true</UseWPF>
	  
	  <LangVersion>latest</LangVersion>
	  <Company>YE</Company>
	  <Authors>$(Company)</Authors>
	  <PackageLicenseExpression>MIT</PackageLicenseExpression>
	  <PackageReadmeFile>README.md</PackageReadmeFile>
	  <AssemblyTitle>YE.Control.Demo</AssemblyTitle>
	  <VersionPrefix>1.0</VersionPrefix>
	  <VersionSuffix>$([System.DateTime]::Now.ToString(`yyyy.MMdd`))</VersionSuffix>
	  <Version>$(VersionPrefix).$(VersionSuffix)</Version>
	  <FileVersion>$(Version)</FileVersion>
	  <AssemblyVersion>$(Version)</AssemblyVersion>
	  <Copyright>Copyright © 2020-$([System.DateTime]::Now.ToString(`yyyy`)) njit-77. All rights reserved.</Copyright>
	  <OutputPath>..\bin</OutputPath>
	  <Description>基于YE.Control的测试Demo</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.2.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\YE.Control\YE.Control.csproj" />
  </ItemGroup>

</Project>
